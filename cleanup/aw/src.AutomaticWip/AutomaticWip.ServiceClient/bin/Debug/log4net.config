<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <root>
      <level value="ALL" />
      <appender-ref ref="file" />
      <appender-ref ref="SmtpAppender" />
      <!--<appender-ref ref="ColoredConsoleAppender" />-->
    </root>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <to value="claudiu.tudor@continental-corporation.com" />
      <from value="AutomaticWip@info.com" />
      <subject value="INFO" />
      <smtpHost value="smtphub07.conti.de" />
      <lossy value="true" />
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="ERROR"/>
      </evaluator>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%-5level]: '%message' %exception%newline" />
      </layout>
    </appender>
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} [%-5level]: '%message' %exception%newline" />
      </layout>
    </appender>
    <appender name="file" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Logs/.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyy/MMMM/dd-dddd" />
      <preserveLogFileNameExtension value="true"/>
      <staticLogFileName value="false" />
      <lockingModel type="log4net.Appender.FileAppender+ExclusiveLock" />
      <encoding value="utf-8" />
      <layout type="log4net.Layout.DynamicPatternLayout">
        <param name="Header" value="%newline**** Trace opened for --- %appdomain --- at local time: %date{yyyy-MM-dd HH:mm:ss} ****%newline%newline"/>
        <param name="ConversionPattern" value="%date{yyyy-MM-dd HH:mm:ss} [%-5level]: '%message' %exception%newline" />
        <param name="Footer" value="%newline**** Trace closed for --- %appdomain --- at local time: %date{yyyy-MM-dd HH:mm:ss} ****%newline"/>
      </layout>
    </appender>
  </log4net>
</configuration>